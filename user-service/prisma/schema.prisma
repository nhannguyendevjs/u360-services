generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("PRISMA_DATABASE_URL")
}

enum Role {
  admin
  member
}

model User {
  id      Int      @id @default(autoincrement())
  name    String
  email   String   @unique
  phone   String   @unique
  address String?
  role    Role
  avatar  String?
  account Account?

  @@map("users")
}

model Account {
  id       Int    @id @default(autoincrement())
  username String
  password Json
  user     User   @relation(fields: [userId], references: [id])
  userId   Int    @unique

  @@map("accounts")
}
